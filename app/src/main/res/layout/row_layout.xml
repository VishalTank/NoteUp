<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:layout_margin="@dimen/padd_10"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="4dp"
    android:elevation="4dp"
    android:padding="@dimen/padd_10">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?attr/tintcolor"
            android:textSize="17sp"
            android:textStyle="bold"
            android:transitionName="@string/transition_name_title" />

        <TextView
            android:id="@+id/creation_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/note"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg"
            android:textColor="?attr/tintcolor"
            android:textIsSelectable="false"
            android:textSize="12sp"
            android:transitionName="@string/transition_name_date" />

        <TextView
            android:id="@+id/noti_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/creation_time"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg"
            android:textColor="?attr/tintcolor"
            android:textIsSelectable="false"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>

    <ImageView
        android:id="@+id/alarm_on"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/alarm_on" />

</android.support.constraint.ConstraintLayout>