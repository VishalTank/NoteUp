<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#00b49c</item>
        <item name="colorPrimaryDark">#007d6d</item>
        <item name="mainBackgroundColor">#ddd</item>
        <item name="noteBackgroundColor">#fff</item>
        <item name="noteColor">#546673</item>
        <item name="noteTextColor">#000</item>
        <item name="colorAccent">#e2e2e2</item>
        <item name="iconsColor">#F2000000</item>
        <item name="fabColor">#009e8a</item>
        <item name="rippleColor">#5ea9a1</item>
        <item name="iconsRippleColor">#333</item>
        <item name="iconsRippleColorInverse">#ccc</item>
        <item name="toggleColor">#303030</item>
        <item name="reminderTextColor">#007d6d</item>
        <item name="menuBackgroundColor">#202020</item>
        <item name="hintColor">#909090</item>

        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="android:colorControlHighlight">?attr/iconsRippleColor</item>

        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogThemeLight</item>
        <item name="android:timePickerDialogTheme">@style/MyTimePickerDialogThemeLight</item>

        <item name="toolbarStyle">@style/MyToolBarStyle</item>
        <item name="actionModeStyle">@style/MyActionModeStyle</item>
        <item name="android:actionBarTheme">@style/MyActionBarTheme</item>
        <item name="android:actionMenuTextColor">?attr/noteTextColor</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

    </style>



    <!-- Dark theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#00695C</item>
        <item name="mainBackgroundColor">#212121</item>
        <item name="noteBackgroundColor">#404040</item>
        <item name="noteColor">#546673</item>
        <item name="noteTextColor">#fff</item>
        <item name="colorAccent">#e2e2e2</item>
        <item name="iconsColor">#fafafa</item>
        <item name="fabColor">#00796B</item>
        <item name="rippleColor">#b7fef7</item>
        <item name="iconsRippleColor">#ccc</item>
        <item name="iconsRippleColorInverse">#333</item>
        <item name="toggleColor">#fafafa</item>
        <item name="reminderTextColor">#00BFA5</item>
        <item name="menuBackgroundColor">#202020</item>
        <item name="hintColor">#d0d0d0</item>

        <item name="android:selectableItemBackground">?android:selectableItemBackground</item>
        <item name="android:colorControlHighlight">?attr/iconsRippleColor</item>

        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogThemeDark</item>
        <item name="android:timePickerDialogTheme">@style/MyTimePickerDialogThemeDark</item>

        <item name="toolbarStyle">@style/MyToolBarStyle</item>
        <item name="actionModeStyle">@style/MyActionModeStyle</item>
        <item name="android:actionBarTheme">@style/MyActionBarTheme</item>
        <item name="android:actionMenuTextColor">?attr/noteTextColor</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

    </style>


    <style name="MyPopUpTheme" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">?attr/mainBackgroundColor</item>
        <item name="android:colorBackground">?attr/toggleColor</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="colorControlHighlight">?attr/iconsRippleColorInverse</item>
    </style>




    <!-- ActionBar's theme -->
    <style name="MyActionBarTheme" parent="@style/Widget.AppCompat.Light.ActionBar">
        <!-- sets the style for the overflow button -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionOverflowButtonStyle">@style/MyactionOverflowButtonStyle</item>
    </style>


    <!-- This style is where you define the tint color of your overflow menu button -->
    <style name="MyactionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/iconsColor</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>


    <!-- Custom Toolbar style -->
    <style name="MyToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="maxButtonHeight">48dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="contentInsetStart">16dp</item>
    </style>


    <style name="MyActionModeStyle" parent="Widget.AppCompat.ActionMode">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>










    <!-- Switch's color change according to this style. -->
    <style name="SwitchCompatStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimaryDisableOnly">?attr/reminderTextColor</item>
        <item name="colorAccent">?attr/reminderTextColor</item>
    </style>




    <!-- Fading animation while changing activities -->
    <style name="WindowAnimationTransition" parent="android:Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>





    <!-- DatePicker's Light theme -->
    <style name="MyDatePickerStyleLight" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">?attr/colorPrimaryDark</item>

    </style>

    <style name="MyDatePickerDialogThemeLight" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyleLight</item>
    </style>

    <!-- TimePicker's Light theme -->
    <style name="MyTimePickerStyleLight" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:headerBackground">?attr/colorPrimaryDark</item>
    </style>

    <style name="MyTimePickerDialogThemeLight" parent="android:Theme.Material.Light.Dialog">
        <item name="android:timePickerStyle">@style/MyTimePickerStyleLight</item>

    </style>


    <!-- DatePicker's Dark theme -->
    <style name="MyDatePickerStyleDark" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:headerBackground">?attr/colorPrimaryDark</item>

    </style>

    <style name="MyDatePickerDialogThemeDark" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyleDark</item>
    </style>

    <!-- TimePicker's Dark theme -->
    <style name="MyTimePickerStyleDark" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:headerBackground">?attr/colorPrimaryDark</item>
    </style>

    <style name="MyTimePickerDialogThemeDark" parent="android:Theme.Material.Dialog">
        <item name="android:timePickerStyle">@style/MyTimePickerStyleDark</item>
    </style>

</resources>